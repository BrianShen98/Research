#include<fstream>
#include<iostream>
#include<string>
#include<set>
using namespace std;

struct Exp
{
	string text;
	string env;
	string obj;

};

int main()
{
	ifstream input("noAct.xml", ios::in);
	ofstream output("makeRamen.xml",ios::out);
	if (!input.is_open())
	{
		cout << "cannot open the file!\n";
		exit(1);
	}
	set<Exp> data;

	string str;
	Exp ptr;
	while (!input.eof())
	{
		getline(input, str);
		if (str.find("<text>") != string::npos)
		{
			ptr.text = str;
			getline(input, str);
			ptr.env = str;
			getline(input, str);
			ptr.obj = str;
			//put the node into set
			data.insert(ptr);
		}

	}

	for (auto p = data.begin(); p != data.end(); p++)
	{
		if (p->obj == )
		{
			output << p->text << "\n"
				<< p->env << "\n"
				<< p->obj << "\n";
		}
	}

	input.close();
	output.close();


}

